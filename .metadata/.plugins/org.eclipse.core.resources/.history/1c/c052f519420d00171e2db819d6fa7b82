package com.lin;

public class Computer {
	// 定义成员变量 
    int price;
    int cpu;
    int xianka;
    int mmo;
    int localcpu;//局部变量优先于成员变量
    // 定义方法
    void Playgame(){
    	int localcpu=4560;//定义局部变量
    	System.out.println("localcpu:"+localcpu);
    	System.out.println("Computer有玩游戏的功能！");
    }
    void Listensong(){
    	int localcpu=6950;//局部变量
    	System.out.println("localcpu:"+localcpu);
    	System.out.println("price:"+price+"cpu:"+cpu+"xianka:"+xianka+"Computer有听歌的功能！");
    }
}
